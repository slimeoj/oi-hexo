<%
var avatar = config.avatar || config.web_prefix+'/static/img/avatar.jpg'
%>
<div class="card">
    <div class="card-body avatar">
        <img src="<%-avatar%>" alt="">
    </div>
    <div class="card-footer text-center">
        <div class="row" style="">

            <%if(config.github){ %>
            <div class="col"> 
                <span href="#" data-toggle="tooltip" title="github.rainboy"> 
                    <span class="iconfont icon-github"></span>
                </span>
            </div>
            <% }%>

            <%if(config.email){ %>
            <div class="col">
                <span href="#" data-toggle="tooltip" title="rainbylvx@qq.com"> 
                    <span class="iconfont icon-email"></span>
                </span>
            </div>
            <% }%>
            
            <%if(config.qq){ %>
            <div class="col">
                <span href="#" data-toggle="tooltip" title="597872644"> 
                    <span class="iconfont icon-qq"></span>
                </span>
            </div>
            <% }%>
        </div>
    </div>
</div>
